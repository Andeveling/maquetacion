---
import Layout from "../../layouts/Layout.astro"
---

<Layout title='Registro' description='Registro de un nuevo usuario' >
  <main class='min-h-screen'>
    <div class='container mx-auto p-4 grid place-content-center max-w-sm md:max-w-xl rounded-2xl mt-20 bg-base-100 shadow-xl py-12'>
      <h1 class='text-5xl font-bold text-center mb-10'>Registro</h1>
      <!-- formulario de login -->
      <form method='POST' class='grid grid-cols-1 md:grid-cols-2 gap-4 max-w-md'>
        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Primer nombre</span>
          </div>
          <input type='text' required placeholder='Escribe aqui' class='input input-bordered w-full' />
        </label>

        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Segundo nombre</span>
          </div>
          <input type='text' required placeholder='Escribe aqui' class='input input-bordered w-full' />
        </label>

        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Primer apellido</span>
          </div>
          <input type='text' required placeholder='Escribe aqui' class='input input-bordered w-full' />
        </label>

        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Segundo apellido</span>
          </div>
          <input type='text' required placeholder='Escribe aqui' class='input input-bordered w-full' />
        </label>

        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Cedula</span>
          </div>
          <input type='text' required placeholder='Escribe aqui' class='input input-bordered w-full' />
        </label>

        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Fecha de nacimiento</span>
          </div>

          <input type='date' required placeholder='***********' class='input input-bordered w-full max-w-xs' />
        </label>

        <div class='col-span-full'>
          <button class='btn btn-primary w-full'>Crear</button>
        </div>
      </form>
    </div>
  </main>
</Layout>
