---
import Layout from "../../layouts/Layout.astro"
---

<Layout title='Login' description='Login de un usuario'>
  <main class='min-h-screen'>
    <div class='container mx-auto p-4 grid place-content-center max-w-xl rounded-2xl mt-20 bg-base-100 shadow-xl py-12'>
      <h1 class='text-5xl font-bold text-center mb-10'>Login</h1>
      <!-- formulario de login -->
      <form method='POST' class='flex flex-col gap-4 max-w-sm'>
        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Usuario</span>
          </div>
          <input type='text' required placeholder='Escribe tu usuario' class='input input-bordered w-full' />
        </label>

        <label class='form-control w-full'>
          <div class='label'>
            <span class='label-text'>Contraseña</span>
          </div>

          <input type='password' required placeholder='***********' class='input input-bordered w-full max-w-xs' />
        </label>

        <div class='flex items-center justify-between'>
          <div class='form-control'>
            <label class='label cursor-pointer gap-4'>
              <input type='checkbox' checked='checked' class='checkbox' />
              <span class='label-text'>Recuerdame</span>
            </label>
          </div>
          <a href='/register' class='link text-sm'>Recuperar contraseña</a>
        </div>

        <button class='btn btn-primary'>Acceder</button>
      </form>
    </div>
  </main>
</Layout>
